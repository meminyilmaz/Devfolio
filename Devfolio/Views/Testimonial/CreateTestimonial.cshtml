@model Devfolio.Models.TblTestimonial
@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Formu</h2>

<form method="post">
    <label>Referans Adı</label>
    @Html.TextBoxFor(x=>x.NameSurname, new{@class="form-control"})
    <br />
    <label>Referans Yorumu</label>
    @Html.TextBoxFor(x=>x.Description, new{@class="form-control"})
    <br />
    <label>Referans Görseli</label>
    @Html.TextBoxFor(x=>x.ImageUrl, new {@class="form-control"})
    <br />
    <label>Durumu</label>
    @Html.TextBoxFor(x=>x.Status, new {@class="form-control"})
    <br />
    <button class="btn  btn-success">Referans Kaydet</button>
</form>

