@model Devfolio.Models.TblTestimonial

@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateTestimonial</h2>

<form method="post">

    <label>Referans Id</label>
    @Html.TextBoxFor(x=>x.TestimonialID, new {@class="form-control" })
    <br /> 
    <label>Referans Adı ve Soyadı</label>
    @Html.TextBoxFor(x=>x.NameSurname, new {@class="form-control" })
    <br /> 
    <label>Referans Yorumu</label>
    @Html.TextBoxFor(x=>x.Description, new {@class="form-control" })
    <br /> 
    <label>Referans ImageUrl</label>
    @Html.TextBoxFor(x=>x.ImageUrl, new {@class="form-control" })
    <br />
    <label>Referans Durumu</label>
    @Html.TextBoxFor(x=>x.Status, new {@class="form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>

</form>